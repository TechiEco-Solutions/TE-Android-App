<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nav_header_close_image_view"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/close"
            android:layout_margin="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/nav_header_tubby_do_image_view"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:src="@drawable/tubby_do" />

        <ImageView
            android:id="@+id/nav_header_empty_tubby_image_view"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/nav_header_tubby_do_image_view"
           android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/empty_tubby" />

        <ImageView
            android:id="@+id/nav_header_add_device_image_view"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/nav_header_empty_tubby_image_view"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/add_device" />

        <ImageView
            android:id="@+id/nav_header_preferences_image_view"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/nav_header_add_device_image_view"
            android:layout_margin="@dimen/_2sdp"
            android:src="@drawable/preferences" />
    </RelativeLayout>
</RelativeLayout>