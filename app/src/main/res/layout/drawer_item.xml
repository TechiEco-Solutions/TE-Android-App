<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_list_item"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardElevation="@dimen/_5sdp"
    android:stateListAnimator="@animator/btn_animator"
    app:cardBackgroundColor="@color/drawerItemsColor"
    >

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/drawer_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_tubby_do"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/drawer_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="@dimen/_15sdp"
                android:text="Tubby do"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/drawerItemsColor"
                app:layout_constraintStart_toEndOf="@+id/drawer_item_icon"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>


