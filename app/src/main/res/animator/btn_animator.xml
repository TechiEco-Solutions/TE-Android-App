<!-- res/animator/button_scale_down.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <!-- Scale down animation -->
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="0.9"
                android:duration="80"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="0.9"
                android:duration="100"
                android:valueType="floatType" />
        </set>
    </item>
    <item>
        <set>
            <!-- Scale up animation for the released state -->
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="1.0"
                android:duration="150"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="1.0"
                android:duration="150"
                android:valueType="floatType" />
        </set>
    </item>
</selector>
